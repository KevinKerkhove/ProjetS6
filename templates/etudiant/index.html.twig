{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Civilite</th>
                <th>Adresse1</th>
                <th>Adresse2</th>
                <th>Adresse3</th>
                <th>CodePostal</th>
                <th>Commune</th>
                <th>Pays</th>
                <th>TelephoneMobile</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>EmailResponsable1</th>
                <th>EmailResponsable2</th>
                <th>Choix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.civilite }}</td>
                <td>{{ etudiant.adresse1 }}</td>
                <td>{{ etudiant.adresse2 }}</td>
                <td>{{ etudiant.adresse3 }}</td>
                <td>{{ etudiant.codePostal }}</td>
                <td>{{ etudiant.commune }}</td>
                <td>{{ etudiant.pays }}</td>
                <td>{{ etudiant.telephoneMobile }}</td>
                <td>{{ etudiant.telephone }}</td>
                <td>{{ etudiant.email }}</td>
                <td>{{ etudiant.emailResponsable1 }}</td>
                <td>{{ etudiant.emailResponsable2 }}</td>
                <td>{{ etudiant.choix }}</td>
                <td>
                    <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etudiant_new') }}">Create new</a>
{% endblock %}
