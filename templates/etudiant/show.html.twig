{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
    <h1>Etudiant</h1>
    <div class="row col-8">
        <a type="button" class="btn btn-outline-success col-2" href="{{ path('etudiant_index') }}">Revenir Ã  la liste</a>
        <a type="button" class="btn btn-outline-success col-2" href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">Modifier</a>
        {% if etudiant.inscrit %}
        <a type="button" class="btn btn-outline-success col-2" href="{{ path('sous_groupe_etudiant_new', {'id': etudiant.id}) }}">Inscrire dans un Groupe</a>
        {% endif %}
        {{ include('etudiant/_delete_form.html.twig') }}
    </div>
    <br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etudiant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ etudiant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Civilite</th>
                <td>{{ etudiant.civilite }}</td>
            </tr>
            <tr>
                <th>Adresse1</th>
                <td>{{ etudiant.adresse1 }}</td>
            </tr>
            <tr>
                <th>Adresse2</th>
                <td>{{ etudiant.adresse2 }}</td>
            </tr>
            <tr>
                <th>Adresse3</th>
                <td>{{ etudiant.adresse3 }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ etudiant.codePostal }}</td>
            </tr>
            <tr>
                <th>Commune</th>
                <td>{{ etudiant.commune }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ etudiant.pays }}</td>
            </tr>
            <tr>
                <th>TelephoneMobile</th>
                <td>{{ etudiant.telephoneMobile }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ etudiant.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ etudiant.email }}</td>
            </tr>
            <tr>
                <th>EmailResponsable1</th>
                <td>{{ etudiant.emailResponsable1 }}</td>
            </tr>
            <tr>
                <th>EmailResponsable2</th>
                <td>{{ etudiant.emailResponsable2 }}</td>
            </tr>
            <tr>
                <th>Choix</th>
                <td>{{ etudiant.choix }}</td>
            </tr>
            <tr>
                <th>Inscrit</th>
                {% if etudiant.inscrit %}
                <td>OUI</td>
                {% else %}
                <td>NON</td>
                {% endif %}
            </tr>
        </tbody>
    </table>
{% endblock %}
