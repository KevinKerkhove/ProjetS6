{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Liste des promotions</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <a type="button" class="btn btn-outline-primary" href="{{ path('promotion_new') }}">Cr√©er une promotion</a>
        <hr>
    {% endif %}
    <table class="table table-sm table-hover">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.nom }}</td>
                <td>
                    <a type="button" class="btn btn-primary"  href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a type="button" class="btn btn-primary" href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
