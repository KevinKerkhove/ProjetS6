{% extends 'base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <h1>Promotion</h1>
    <div class="row col-8">
        <a type="button" class="btn btn-outline-success col-2" href="{{ path('promotion_index') }}">Revenir à la liste</a>
        <a type="button" class="btn btn-outline-success col-2" href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
        {{ include('promotion/_delete_form.html.twig') }}
    </div>
    <br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ promotion.nom }}</td>
            </tr>
            <tr>
                <th>Années</th>
                <td> {{ promotion.annees ? promotion.annees|date('Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Groupes de la Promotion {{ promotion.nom }}</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{ groupe.id }}</td>
                <td>{{ groupe.nom }}</td>
                <td>
                    <a href="{{ path('groupe_show', {'id': groupe.id}) }}">show</a>
                    <a href="{{ path('groupe_edit', {'id': groupe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    
{% endblock %}
